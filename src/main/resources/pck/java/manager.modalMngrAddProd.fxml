<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.text.*?>
<AnchorPane prefHeight="600.0" prefWidth="436.0" xmlns="http://javafx.com/javafx/18" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="pck.java.fe.manager.modal.AddProdController">
    <children>
        <Label alignment="CENTER" contentDisplay="CENTER" layoutX="83.0" layoutY="30.0" text="Thêm nhu yếu phẩm">
            <font>
                <Font name="Arial Bold" size="24.0"/>
            </font>
        </Label>
        <Pane layoutX="-1.0" layoutY="77.0" prefHeight="422.0" prefWidth="436.0">
            <children>
                <Pane layoutX="36.0" prefHeight="150.0" prefWidth="200.0">
                    <children>
                        <ImageView fx:id="imageView" disable="true" fitHeight="150.0" fitWidth="207.0"
                                   pickOnBounds="true" preserveRatio="true">
                            <image>
                                <Image url="https://res.cloudinary.com/ngo-minh-phat/image/upload/v1650184929/covid_app/products/placeholder-image_e7drvx.png"/>
                            </image>
                        </ImageView>
                    </children>
                </Pane>
                <Label layoutX="25.0" layoutY="200.0" prefHeight="30.0" text="Tên sản phẩm">
                    <font>
                        <Font size="14.0"/>
                    </font>
                </Label>
                <TextField fx:id="prodName" layoutX="150.0" layoutY="200.0" prefHeight="30.0" prefWidth="250.0"
                           promptText="Tên sản phẩm"/>
                <Label layoutX="25.0" layoutY="250.0" prefHeight="30.0" text="Giá sản phẩm">
                    <font>
                        <Font size="14.0"/>
                    </font>
                </Label>
                <TextField fx:id="prodPrice" alignment="CENTER_RIGHT" layoutX="150.0" layoutY="250.0" prefHeight="30.0"
                           prefWidth="87.0" promptText="Giá"/>
                <Label alignment="CENTER_RIGHT" layoutX="248.0" layoutY="250.0" maxWidth="75.0" prefHeight="30.0"
                       prefWidth="30.0" text="VNĐ">
                    <font>
                        <Font size="14.0"/>
                    </font>
                </Label>
                <Button fx:id="btnSelectImg" layoutX="263.0" layoutY="60.0" mnemonicParsing="false" prefHeight="30.0"
                        prefWidth="125.0" text="Chọn hình ảnh"/>
                <ComboBox fx:id="prodUnit" layoutX="251.0" layoutY="300.0" prefHeight="30.0" prefWidth="84.0"
                          promptText="Đơn vị"/>
                <Label layoutX="25.0" layoutY="358.0" prefHeight="30.0" text="Thêm vào gói">
                    <font>
                        <Font size="14.0"/>
                    </font>
                </Label>
                <ComboBox fx:id="packageName" layoutX="150.0" layoutY="358.0" prefHeight="30.0" prefWidth="99.0"
                          promptText="Chọn"/>
                <Label layoutX="25.0" layoutY="300.0" prefHeight="30.0" text="Số lượng">
                    <font>
                        <Font size="14.0"/>
                    </font>
                </Label>
                <TextField fx:id="quantity" alignment="CENTER_RIGHT" layoutX="150.0" layoutY="300.0" prefHeight="30.0"
                           prefWidth="84.0" promptText="Số lượng"/>
            </children>
        </Pane>
        <Button fx:id="btnAddProduct" layoutX="50.0" layoutY="532.0" mnemonicParsing="false"
                onAction="#onBtnAddProductClicked" prefHeight="40.0" prefWidth="300.0" text="Thêm sản phẩm">
            <font>
                <Font name="Arial Bold" size="14.0"/>
            </font>
        </Button>
        <Label fx:id="invalidDetails" alignment="CENTER" contentDisplay="CENTER" layoutX="24.0" layoutY="492.0"
               prefHeight="40.0" prefWidth="350.0" textAlignment="CENTER" textFill="RED">
            <font>
                <Font name="Arial Italic" size="14.0"/>
            </font>
        </Label>
    </children>
</AnchorPane>
