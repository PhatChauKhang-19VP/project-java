<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="550.0" prefWidth="400.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="pck.java.fe.manager.modal.ModPatientController">
    <children>
        <Label alignment="CENTER" layoutY="20.0" prefWidth="400.0" text="Sửa thông tin bệnh nhân">
            <font>
                <Font name="Arial Bold" size="24.0" />
            </font>
        </Label>
        <Pane fx:id="paneLeft" prefHeight="550.0" prefWidth="300.0">
            <ScrollPane hbarPolicy="NEVER" layoutY="70.0" pannable="true" prefHeight="380.0" prefWidth="400.0" vbarPolicy="ALWAYS">
                <AnchorPane minHeight="0.0" minWidth="0.0" prefWidth="380.0">
                    <Label layoutX="20.0" prefHeight="30.0" prefWidth="350.0" text="Họ và tên">
                        <font>
                            <Font size="18.0" />
                        </font>
                    </Label>
                    <TextField fx:id="tfName" layoutX="20.0" layoutY="30.0" prefHeight="40.0" prefWidth="350.0">
                        <font>
                            <Font size="18.0" />
                        </font>
                    </TextField>
                    <Label fx:id="emName" layoutX="20.0" layoutY="70.0" prefWidth="350.0" text="Trường họ và tên không được để trống" textFill="RED" visible="false">
                        <font>
                            <Font name="System Italic" size="14.0" />
                        </font>
                    </Label>
                    <Label layoutX="20.0" layoutY="100.0" prefHeight="30.0" prefWidth="350.0" text="CCCD">
                        <font>
                            <Font size="18.0" />
                        </font>
                    </Label>
                    <TextField fx:id="tfID" disable="true" layoutX="20.0" layoutY="130.0" prefHeight="40.0" prefWidth="350.0">
                        <font>
                            <Font size="18.0" />
                        </font>
                    </TextField>
                    <Label fx:id="emID" layoutX="20.0" layoutY="170.0" prefWidth="350.0" text="Trường CCCD không được bỏ trống" textFill="RED" visible="false">
                        <font>
                            <Font name="System Italic" size="14.0" />
                        </font>
                    </Label>
                    <Label layoutX="20.0" layoutY="200.0" prefHeight="30.0" prefWidth="350.0" text="Năm sinh">
                        <font>
                            <Font size="18.0" />
                        </font>
                    </Label>
                    <DatePicker fx:id="tfDob" layoutX="20.0" layoutY="230.0" prefHeight="40.0" prefWidth="350.0" style="-fx-font-size: 18;" />
                    <Label fx:id="emDob" layoutX="20.0" layoutY="270.0" prefWidth="350.0" text="Năm sinh không được bỏ trống" textFill="RED" visible="false">
                        <font>
                            <Font name="System Italic" size="14.0" />
                        </font>
                    </Label>
                    <Label layoutX="20.0" layoutY="300.0" prefHeight="30.0" prefWidth="350.0" text="Trạng thái Covid">
                        <font>
                            <Font size="18.0" />
                        </font>
                    </Label>
                    <TextField fx:id="tfFStat" layoutX="20.0" layoutY="330.0" prefHeight="40.0" prefWidth="350.0">
                        <font>
                            <Font size="18.0" />
                        </font>
                    </TextField>
                    <Label fx:id="emFStat" layoutX="20.0" layoutY="370.0" prefWidth="350.0" text="Trạng thái Covid phải là F0/F1/..." textFill="RED" visible="false">
                        <font>
                            <Font name="System Italic" size="14.0" />
                        </font>
                    </Label>
                    <Label layoutX="20.0" layoutY="400.0" prefHeight="30.0" prefWidth="350.0" text="Địa điểm điều trị/cách li">
                        <font>
                            <Font size="18.0" />
                        </font>
                    </Label>
                    <ComboBox fx:id="cbTloc" layoutX="20.0" layoutY="430.0" prefHeight="40.0" prefWidth="350.0" promptText="Chọn địa điểm" style="-fx-font-size: 18;" />
                    <Label fx:id="emTloc" layoutX="30.0" layoutY="580.0" prefWidth="350.0" text="Bạn chưa chọn địa điểm cách li" textFill="RED" visible="false">
                        <font>
                            <Font name="System Italic" size="14.0" />
                        </font>
                    </Label>
                    <Label layoutX="20.0" layoutY="500.0" prefHeight="30.0" prefWidth="350.0" text="Tỉnh/Thành phố">
                        <font>
                            <Font size="18.0" />
                        </font>
                    </Label>
                    <ComboBox fx:id="cbProvince" layoutX="20.0" layoutY="530.0" prefHeight="40.0" prefWidth="350.0" promptText="Chọn tỉnh/thành phố" style="-fx-font-size: 18;" />
                    <Label fx:id="emProvince" layoutX="20.0" layoutY="570.0" prefWidth="350.0" text="Bạn chưa chọn tỉnh/thành/phố" textFill="RED" visible="false">
                        <font>
                            <Font name="System Italic" size="14.0" />
                        </font>
                    </Label>
                    <Label layoutX="20.0" layoutY="600.0" prefHeight="30.0" prefWidth="350.0" text="Quận/Huyện/Thị xã">
                        <font>
                            <Font size="18.0" />
                        </font>
                    </Label>
                    <ComboBox fx:id="cbDistrict" disable="true" layoutX="20.0" layoutY="630.0" prefHeight="40.0" prefWidth="350.0" promptText="Chọn quận/huyện/thị xã" style="-fx-font-size: 18;" />
                    <Label fx:id="emDistrict" layoutX="20.0" layoutY="670.0" prefWidth="350.0" text="Bạn chưa chọn quận/huyện/thị xã" textFill="RED" visible="false">
                        <font>
                            <Font name="System Italic" size="14.0" />
                        </font>
                    </Label>
                    <Label layoutX="20.0" layoutY="700.0" prefHeight="30.0" prefWidth="350.0" text="Xã/Phường/Thị trấn">
                        <font>
                            <Font size="18.0" />
                        </font>
                    </Label>
                    <ComboBox fx:id="cbWard" disable="true" layoutX="20.0" layoutY="730.0" prefHeight="40.0" prefWidth="350.0" promptText="Chọn xã/phường/thị trấn" style="-fx-font-size: 18;" />
                    <Label fx:id="emWard" layoutX="20.0" layoutY="770.0" prefWidth="350.0" text="Bạn chưa chọn xã/phường" textFill="RED" visible="false">
                        <font>
                            <Font name="System Italic" size="14.0" />
                        </font>
                    </Label>
                    <Label layoutX="20.0" layoutY="800.0" prefHeight="30.0" prefWidth="350.0" text="Địa chỉ chi tiết">
                        <font>
                            <Font size="18.0" />
                        </font>
                    </Label>
                    <TextField fx:id="tfAL" layoutX="20.0" layoutY="830.0" prefHeight="40.0" prefWidth="350.0">
                        <font>
                            <Font size="18.0" />
                        </font>
                    </TextField>
                    <Label fx:id="emAL" layoutX="30.0" layoutY="870.0" prefWidth="350.0" text="Trường này không được bỏ trống" textFill="RED" visible="false">
                        <font>
                            <Font name="System Italic" size="14.0" />
                        </font>
                    </Label>
                </AnchorPane>
            </ScrollPane>
        </Pane>
        <Button fx:id="btnUpdatePatient" layoutX="50.0" layoutY="480.0" mnemonicParsing="false" onAction="#onBtnUpdatePatientClick" prefHeight="40.0" prefWidth="300.0" text="Cập nhật">
            <font>
                <Font name="Arial Bold" size="14.0" />
            </font>
        </Button>
    </children>
</AnchorPane>
