<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Hyperlink?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="550.0" prefWidth="400.0" xmlns="http://javafx.com/javafx/18" xmlns:fx="http://javafx.com/fxml/1" fx:controller="pck.java.fe.manager.modal.ModProdController">
    <children>
        <Label layoutX="46.0" layoutY="30.0" text="Sửa thông tin nhu yếu phẩm">
            <font>
                <Font name="Arial Bold" size="24.0" />
            </font>
        </Label>
        <Pane layoutY="100.0" prefHeight="367.0" prefWidth="400.0">
            <children>
                <ImageView fx:id="imageView" fitHeight="150.0" fitWidth="200.0" layoutX="100.0" pickOnBounds="true" preserveRatio="true">
                    <image>
                        <Image url="https://res.cloudinary.com/ngo-minh-phat/image/upload/v1650184929/covid_app/products/placeholder-image_e7drvx.png" />
                    </image>
                </ImageView>
                <Hyperlink layoutX="25.0" layoutY="155.0" prefHeight="20.0" prefWidth="350.0" text="https://res.cloudinary.com/ngo-minh-phat/image/upload/v1648226576/covid_app/products/quyt-mini-tui-500g_yqm3sr.jpg" visible="false" />
                <Label layoutX="25.0" layoutY="200.0" prefHeight="30.0" text="Tên sản phẩm">
                    <font>
                        <Font size="14.0" />
                    </font>
                </Label>
                <TextField fx:id="prodName" layoutX="150.0" layoutY="200.0" prefHeight="30.0" prefWidth="225.0" promptText="Tên sản phẩm" />
                <Label layoutX="25.0" layoutY="250.0" prefHeight="30.0" text="Giá sản phẩm">
                    <font>
                        <Font size="14.0" />
                    </font>
                </Label>
                <TextField fx:id="prodPrice" alignment="CENTER_RIGHT" layoutX="150.0" layoutY="250.0" prefHeight="30.0" prefWidth="50.0" promptText="Giá" />
                <Label alignment="CENTER_RIGHT" layoutX="205.0" layoutY="250.0" maxWidth="75.0" prefHeight="30.0" prefWidth="30.0" text="VNĐ">
                    <font>
                        <Font size="14.0" />
                    </font>
                </Label>
                <Button fx:id="btnSelectImage" layoutX="250.0" layoutY="250.0" mnemonicParsing="false" prefHeight="30.0" prefWidth="125.0" text="Chọn hình ảnh" />
                <Label layoutX="26.0" layoutY="310.0" prefHeight="30.0" text="Đơn vị tính">
                    <font>
                        <Font size="14.0" />
                    </font>
                </Label>
                <ComboBox fx:id="prodUnit" layoutX="151.0" layoutY="310.0" prefHeight="30.0" prefWidth="99.0" promptText="Chọn" />
                <TextField fx:id="prodID" editable="false" layoutX="25.0" layoutY="175.0" prefHeight="30.0" prefWidth="225.0" visible="false" />
            <Label fx:id="invalidDetails" layoutX="150.0" layoutY="280.0" prefHeight="30.0">
               <font>
                  <Font size="14.0" />
               </font>
            </Label>
            </children>
        </Pane>
        <Button fx:id="btnUpdateProduct" layoutX="50.0" layoutY="475.0" mnemonicParsing="false" onAction="#onBtnUpdateProductClicked" prefHeight="40.0" prefWidth="300.0" text="Cập nhật">
            <font>
                <Font name="Arial Bold" size="14.0" />
            </font>
        </Button>
    </children>
</AnchorPane>
